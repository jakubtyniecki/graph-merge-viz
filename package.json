{
  "name": "@jakubtyniecki/graph-merge-viz",
  "version": "1.4.5",
  "type": "module",
  "description": "Interactive web tool for learning graph merge algorithms through visual diff and approval workflows",
  "keywords": [
    "graph",
    "merge",
    "visualization",
    "cytoscape",
    "diff",
    "algorithm",
    "education",
    "interactive"
  ],
  "author": "Jakub Tyniecki",
  "license": "MIT",
  "homepage": "https://github.com/jakubtyniecki/graph-merge-viz",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakubtyniecki/graph-merge-viz.git"
  },
  "bugs": {
    "url": "https://github.com/jakubtyniecki/graph-merge-viz/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "server.js"
  ],
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "prepare": "npm run build",
    "start": "node server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "deploy": "npm run build && gh-pages -d dist -m \"Deploy: $(node -p \\\"require('./package.json').version\\\")\""
  },
  "dependencies": {
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@vitest/coverage-v8": "^4.0.18",
    "cytoscape": "^3.33.1",
    "cytoscape-fcose": "^2.2.0",
    "gh-pages": "^6.1.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
